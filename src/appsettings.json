      "openid",
      "profile",
      "email"
    ],
    "TokenEndpoint": "https://api.line.me/oauth2/v2.1/token",
    "UserInformationEndpoint": "https://api.line.me/v2/profile"
  },
  "LineSetting": {
    "ChannelAccessToken": "<Your Line Channel Access Token>",
    "ChannelSecret": "<Your Line Channel Secret>"
  },
