{
  "AllowedHosts": "*",
  "ApplicationInsights": {
    "InstrumentationKey": ""
  },
  "Azure": {
    "SignalR": {
      "ConnectionString": "",
      "Enabled": false
    }
  },
  "ConnectionConfig": {
    "ConnectionString": "DataSource=.\\db.sqlite;",
    // MySql, SqlServer, Sqlite, Oracle, PostgreSQL, Dm, Kdbndp,
    "DbType": "Sqlite",
    // SystemTable, Attribute
    "InitKeyType": "Attribute",
    "IsAutoCloseConnection": true
  },
  "LineBotSetting": {
    "AdminIds": [],
    "AuthorizationEndpoint": "https://access.line.me/oauth2/v2.1/authorize",
    "Beacon": {
      "Enabled": false,
      "EnabledAlwaysSendTextMessage": false,
      "OnBeaconTextMessage": "歡迎蒞臨\r\n{0}"
    },
    "CallbackPath": "/api/line/auth",
    "ClientId": "<Your Client ID>",
    "ClientSecret": "<Your Client Secret>",
    "MessageReplyMapping": {
      "locationText": "Intent_locationText_TextMessage.json",
      "sticker": "Intent_sticker_StickerMessage.json",
      "地點": "台北市",
      "恭喜": "謝謝~",
      "恭喜唷": "謝謝😍"
    },
    "OnFollowTextMessage": "{0} 您好，我是婚禮小幫手，您可以透過聊天室下方選單進行操作",
    "PostbackReplyMapping": {
      "TrafficInfo": "Intent_trafficInfo_ImageCarouselTemplate.json"
    },
    "Scopes": [
      "openid",
      "profile",
      "email"
    ],
    "TokenEndpoint": "https://api.line.me/oauth2/v2.1/token",
    "UserInformationEndpoint": "https://api.line.me/oauth2/v2.1/verify"
  },
  "LineSetting": {
    "ChannelAccessToken": "<Your Line Channel Access Token>",
    "ChannelSecret": "<Your Line Channel Secret>"
  },
  "Mail": {
    "EmailSubject": "Application Error",
    "FromEmail": "no-reply@example.com",
    "FromName": "no-reply@example.com",
    "SendGrid": {
      "ApiKey": ""
    },
    "ToEmail": "no-reply@example.com"
  },
  "Serilog": {
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName"
    ],
    "MinimumLevel": {
      // Verbose, Debug, Information, Warning, Error, Fatal
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Properties": {
      "Application": "Wedding"
    },
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.ApplicationInsights"
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Args": {
                "outputTemplate": "{Timestamp:o} [{Level:u3}] ({MachineName}/{SourceContext}/{ThreadId}) [{UserName}/{UserId}] {Message}{NewLine}{Exception}",
                "path": "Logs\\error_.log",
                "rollingInterval": "Day",
                "restrictedToMinimumLevel": "Error"
              },
              "Name": "File"
            },
            {
              "Args": {
                "outputTemplate": "{Timestamp:o} [{Level:u3}] ({MachineName}/{SourceContext}/{ThreadId}) [{UserName}/{UserId}] {Message}{NewLine}{Exception}",
                "path": "Logs\\log_.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7
              },
              "Name": "File"
            }
          ]
        }
      },
      {
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        },
        "Name": "ApplicationInsights"
      }
    ]
  },
  "WeddingOptions": {
    "CultureInfo": "en",
    "Date": "2022/01/01 PM 12:00",
    "DayFormat": "yyyy/MM/dd dddd",
    "InvitationDescription": "誠摯的邀請您來參加我們的結婚喜宴，為我們的幸福做見證",
    "Name": "",
    "TimeFormat": "tt hh:mm:ss",
    "WeddingPhotos": [
      "images/p1.jpg",
      "images/p2.jpg",
      "images/p3.jpg"
    ]
  }
}