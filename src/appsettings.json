{
  "AllowedHosts": "*",
  "ApplicationInsights": {
    "InstrumentationKey": ""
  },
  "Azure": {
    "SignalR": {
      "ConnectionString": "",
      "Enabled": false
    }
  },
  "ConnectionConfig": {
    "ConnectionString": "DataSource=.\\db.sqlite;",
    // MySql, SqlServer, Sqlite, Oracle, PostgreSQL, Dm, Kdbndp,
    "DbType": "Sqlite",
    // SystemTable, Attribute
    "InitKeyType": "Attribute",
