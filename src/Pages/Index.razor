@page "/"
@inject IJSRuntime JS

<div id="fullpage">
    <Banner class="section" Id="section0" Style="height: 100vh;" />
    <About class="section" Id="section1" Style="height: 100vh;" />
    <Services class="section" Id="section2" Style="height: 100vh;" />
    <Gallery class="section" Id="section3" Style="height: 100vh;" />
    <Contact class="section" Id="section4" Style="height: 100vh;" />
</div>
<Backtop />

@code{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var objRef = DotNetObjectReference.Create<object>(new
            {
                licenseKey = "OPEN-SOURCE-GPLV3-LICENSE",
                anchors = new[] { "banner", "about", "services", "gallery", "contact" }
            });

            await JS.InvokeVoidAsync("fullpage", "#fullpage", objRef.Value).ConfigureAwait(false);
        }
    }
}

